{
  "kind": "collectionType",
  "collectionName": "webpage_rows",
  "info": {
    "singularName": "webpage-row",
    "pluralName": "webpage-rows",
    "displayName": "Webpage Row",
    "description": "A row component for webpages with content and addons",
    "icon": "layout"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "rowName": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "text",
      "required": true
    },
    "webpage": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::webpages.webpage",
      "inversedBy": "rows"
    },
    "addons": {
      "type": "dynamiczone",
      "components": [
        "addons.link-button"
      ]
    }
  }
}
